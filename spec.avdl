protocol OcpVNext {
    @namespace("mbag.dh.io.foc.ocp.v2")
    record InvoiceInfo {
        union { Person, Company } customer;
        PostalAddress postalAddress;
        union { null, InvoiceSettings } invoiceSettings;
    }

    @namespace("mbag.dh.io.foc.ocp.v2")
    record InvoiceSettings {
        DeliveryChannelPreferences deliveryChannelPreferences;
    }

    record DeliveryChannelPreferences {
        union { TwDeliveryChannelPreferences } customer;
    }

    @namespace("mbag.dh.io.foc.ocp.v2")
    record Person {

    }

    @namespace("mbag.dh.io.foc.ocp.v2")
    record Company {}
    
    @namespace("mbag.dh.io.foc.ocp.v2")
    record PostalAddress {
        Addressee addressee;
